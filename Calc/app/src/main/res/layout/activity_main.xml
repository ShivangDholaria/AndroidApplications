<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="124dp"
        android:layout_marginTop="99dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="20sp" />

    <Button
        android:id="@+id/Num3"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="230dp"
        android:layout_marginTop="470dp"
        android:onClick="select_3"
        android:text="3" />

    <Button
        android:id="@+id/Num1"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="65dp"
        android:layout_marginTop="470dp"
        android:onClick="select_1"
        android:text="1" />

    <Button
        android:id="@+id/Num2"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="150dp"
        android:layout_marginTop="470dp"
        android:onClick="select_2"
        android:text="2" />

    <Button
        android:id="@+id/Num5"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="150dp"
        android:layout_marginTop="410dp"
        android:onClick="select_5"
        android:text="5" />

    <Button
        android:id="@+id/Num4"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="65dp"
        android:layout_marginTop="410dp"
        android:onClick="select_4"
        android:text="4" />

    <Button
        android:id="@+id/Num6"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="230dp"
        android:layout_marginTop="410dp"
        android:onClick="select_6"
        android:text="6" />

    <Button
        android:id="@+id/Num7"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="65dp"
        android:layout_marginTop="350dp"
        android:onClick="select_7"
        android:text="7" />

    <Button
        android:id="@+id/Num8"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="150dp"
        android:layout_marginTop="350dp"
        android:onClick="select_8"
        android:text="8" />

    <Button
        android:id="@+id/Num9"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="230dp"
        android:layout_marginTop="350dp"
        android:onClick="select_9"
        android:text="9" />

    <Button
        android:id="@+id/Num0"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="150dp"
        android:layout_marginTop="540dp"
        android:onClick="select_0"
        android:text="0" />

    <Button
        android:id="@+id/Add"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="310dp"
        android:layout_marginTop="350dp"
        android:onClick="select_plus"
        android:text="+" />

    <Button
        android:id="@+id/Subract"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="310dp"
        android:layout_marginTop="410dp"
        android:onClick="select_minus"
        android:text="-" />

    <Button
        android:id="@+id/Divide"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="310dp"
        android:layout_marginTop="470dp"
        android:onClick="select_div"
        android:text="/" />

    <Button
        android:id="@+id/Multiply"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="310dp"
        android:layout_marginTop="540dp"
        android:onClick="select_mul"
        android:text="*" />

    <Button
        android:id="@+id/Equal"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="310dp"
        android:layout_marginTop="608dp"
        android:layout_marginEnd="27dp"
        android:onClick="select_eq"
        android:text="=" />

</RelativeLayout>